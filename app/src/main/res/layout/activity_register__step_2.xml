<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.LoginActivity"
    android:background="@android:color/white"
    android:padding="15dp"
    android:gravity="center_horizontal"
    android:id="@+id/RegisterActivity">
    <ImageView
        android:id="@+id/Himage"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ogo_primary_horizontal" />
    <LinearLayout
        android:layout_below="@id/Himage"
        android:padding="15dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:text="Optional Fields"
            android:textSize="23sp"/>
        <Spinner
            android:id="@+id/RegProfession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bgborder"
            android:padding="13dp"
            android:entries="@array/profession">

        </Spinner>

        <Spinner
            android:id="@+id/RegState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bgborder"
            android:padding="13dp"
            android:entries="@array/state">

        </Spinner>

        <EditText
            android:id="@+id/RegCity"
            android:textSize="13sp"
            android:inputType="text"
            android:layout_margin="10dp"
            android:padding="13dp"
            android:hint="City"
            android:background="@drawable/bgborder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/RegPincode"
            android:textSize="13sp"
            android:inputType="number"
            android:layout_margin="10dp"
            android:padding="13dp"
            android:hint="Pincode"
            android:maxLength="7"
            android:background="@drawable/bgborder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By continuing you agree to GST Samadhan's"
                    android:textAlignment="center"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/Reg_TermOFService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" terms of service"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="9sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" &amp; "
                    android:textAlignment="center"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/Reg_PrivacyNotice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="privacy Notice"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="9sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/RegButtonSkip"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="Skip"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/RegButtonStep2"
                android:layout_marginTop="10dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                android:background="@color/colorAccent"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:text="Register"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>




    </LinearLayout>

</RelativeLayout>