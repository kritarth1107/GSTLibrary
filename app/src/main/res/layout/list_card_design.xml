<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/SectionCardView"
        android:elevation="1dp"
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:layout_weight="0.25"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@drawable/circlebg"
            android:layout_width="65dp"
            android:layout_height="65dp">
            <ImageView
                android:id="@+id/ImageIcon"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_agenda"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_weight="0.75"
        android:layout_width="0dp"
        android:layout_height="match_parent">
<TextView
    android:id="@+id/SectionNoTextView"
    android:textSize="18sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Section No"
    android:textStyle="bold"
    android:textColor="@color/colorPrimaryDark"/>
        <TextView
            android:id="@+id/SectionTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Section Tittle"
            android:textColor="@android:color/black"
            />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/SectionGstTextView"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="C/S GST"/>
            <TextView
                android:id="@+id/SectionYearTextView"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="year"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>